<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<HBox fx:id="foundUserScene" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: FEFFDE;" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.social_network_bastille.controller.graphic.FoundUserController">
    <children>
        <AnchorPane prefHeight="400.0" prefWidth="152.0" style="-fx-background-color: ECE7B4;">
            <children>
                <TextField fx:id="tfSearch" layoutX="38.0" layoutY="59.0" prefHeight="26.0" prefWidth="99.0"
                           promptText="Search user" style="-fx-background-color: E6DF9A;"
                           stylesheets="@../css/textField-style.css"/>
                <Button fx:id="btnSearcher" layoutX="1.0" layoutY="59.0" mnemonicParsing="false" onAction="#findAnUser"
                        prefHeight="20.0" prefWidth="20.0" stylesheets="@../css/button-yellow-style.css">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="btnBack" layoutX="16.0" layoutY="10.0" mnemonicParsing="false"
                        stylesheets="@../css/button-yellow-style.css">
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <ImageView fx:id="imageSearch" fitHeight="100.0" fitWidth="100.0" layoutX="26.0" layoutY="200.0"
                           pickOnBounds="true" preserveRatio="true"/>
            </children>
        </AnchorPane>
        <AnchorPane prefHeight="400.0" prefWidth="446.0" style="-fx-background-color: FEFFDE;">
            <children>
                <TableView fx:id="foundUsers" prefHeight="389.0" prefWidth="446.0" style="-fx-background-color: BFCF57;"
                           stylesheets="@../css/table-formatter.css">
                    <columns>
                        <TableColumn fx:id="firstNameCol" prefWidth="250.0" text="First name"/>
                        <TableColumn fx:id="lastNameCol" prefWidth="250.0" text="Last name"/>
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</HBox>
